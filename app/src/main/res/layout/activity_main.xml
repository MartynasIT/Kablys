<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/weatherNow"
        android:padding="14dp">

        <RelativeLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/d">
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Dabar Vilniuje"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:id="@+id/b"
        android:layout_below="@+id/d"
        android:orientation="horizontal">


            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Temperatūra"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/TempNow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="19sp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b"
            android:id="@+id/press"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Slėgis"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/PressureNow"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="19sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/press"
            android:id="@+id/humid"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Drėgnumas"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/HumidityNow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="19sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/humid"
            android:id="@+id/bite"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/biteNow"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit ="marquee_forever"
                android:focusable="true"
                android:text=""
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bite"
            android:id="@+id/tofish"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/FishesToFIsh"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit ="marquee_forever"
                android:focusable="true"
                android:text=""
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"/>


        </LinearLayout>


        <ImageView
            android:id="@+id/conditionToday"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="9dp"
            android:layout_width="172dp"
            android:layout_height="71dp"
            android:layout_toEndOf="@+id/b"
            android:layout_toRightOf="@+id/b" />


    </RelativeLayout>
    <ListView
        android:visibility="visible"
        android:id="@+id/idListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
